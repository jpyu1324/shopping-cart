{
  "name": "shopping-cart",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "bootswatch": "^4.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.2.3",
    "react-router-dom": "^6.2.2",
    "react-scripts": "5.0.0",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "craco start",
    "start:context": "cp src/index/index.context.tsx src/index.tsx && cross-env REACT_APP_ENV=context yarn start",
    "start:redux": "cp src/index/index.context.tsx src/index.tsx && cross-env REACT_APP_ENV=redux yarn start",
    "start:mobx": "cp src/index/index.mobx.tsx src/index.tsx && cross-env REACT_APP_ENV=mobx yarn start",
    "start:recoil": "cp src/index/index.recoil.tsx src/index.tsx && cross-env REACT_APP_ENV=recoil yarn start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
